#!/bin/bash

# Check if CFILE variable is set
if [ -z "$CFILE" ]; then
    echo "CFILE variable is not set. Please export CFILE=<your_c_file>"
    exit 1
fi

# Extract file name without extension
BASENAME="${CFILE%.*}"

# Generate assembly code with Intel syntax
gcc -S -masm=intel "$CFILE" -o "$BASENAME.s"
